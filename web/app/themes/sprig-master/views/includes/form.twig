<div class="formule-ctn form">

    <h2>{{ post.titre_formulaire }}</h2>


    {% if confirmation is defined %}
        {% if confirmation == 1 %}
            Merci, votre email a bien été envoyé. 
        {% else %}
            Un problème est survenu lors de l'envoi de votre email. Veuillez réessayer plus tard ou contacter l'administrateur du site.
        {% endif %}
    {% else %}
    <form id="formule-form" action="{{ post.permalink }}#form" method="post">
        <div class="grid-ctn">
            <div class="gr-6 checkox">
                <label for="deco">Décoration de l'événement</label>
                <input checked type="checkbox" id="deco" name="deco">
            </div>
            <div class="gr-6 checkox">
                <label for="orga">Organisation de l'événement</label>
                <input type="checkbox" id="orga" name="orga">
            </div>
            <div class="gr-6">
                <label for="bonus">Bonus choisi</label>
                <textarea id="bonus" name="bonus"></textarea>
            </div>
            <div class="gr-12"></div>
            <div class="gr-6">
                <label for="nom">Nom<div>*</div></label>
                <input type="text" name="nom" id="nom" required>
            </div>
            <div class="gr-6">
                <label for="prenom">Prénom<div>*</div></label>
                <input type="text" name="prenom" id="prenom" required>
            </div>
            <div class="gr-6">
                <label for="tel">Téléphone</label>
                <input type="text" name="tel" id="tel">
            </div>
            <div class="gr-6">
                <label for="email">Email<div>*</div></label>
                <input type="email" name="email" id="email" required>
            </div>
            <div class="row">
                <div class="gr-6">
                    <label for="jour">Quels sont vos disponibilites pour nous rencontrer ?</label>
                    <div class="select-style tiny">
                        <select id="jour" name="jour">
                            <option>Jour</option>
                            {% for i in 1..31 %}
                                <option value="{{ i }}">{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="select-style tiny">
                        <select id="mois" name="mois">
                            <option>Mois</option>
                            {% for j in range(1, 12) %}
                                <option>{{ date('2012-' ~ j ~ '-01') |date('M') }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="gr-6">
                    <label for="rencontre">Où souhaitez vous nous rencontrer ?</label>
                    <input type="text" name="rencontre" id="rencontre">
                </div>
            </div>
            <div class="gr-6">
                <label for="lieu">Dans quel lieu l'événement prendra t'il place ?</label>
                <input type="text" name="lieu" id="lieu">
            </div>
            <div class="gr-6">
                <label for="occasion">Pour quelle occasion ?</label>
                <input type="text" name="occasion" id="occasion">
            </div>
            <div class="gr-6">
                <label for="nombre">Combien serez vous ?</label>
                <input type="number" name="nombre" id="nombre">
            </div>
            <div class="gr-6">
                <label for="budget">Quel est votre budget ?</label>
                Entre <input type="number" class="tiny" value="{{ post.prix_minimum }}" name="minBudget" id="minBudget"> 
                et <input type="number" class="tiny" value="{{ post.prix_maximum }}" name="maxBudget" id="maxBudget"> Euros.
            </div>
            <div class="gr-6">
                <label for="date">Pour quelle date ?</label>
                <div class="select-style tiny">
                    <select id="ev-jour" name="ev-jour">
                        <option>Jour</option>
                        {% for i in 1..31 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="select-style tiny">
                    <select id="ev-mois" name="ev-mois">
                        <option>Mois</option>
                        {% for j in range(1, 12) %}
                            <option>{{ date('2012-' ~ j ~ '-01') |date('M') }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        
        <div class="grid-ctn">
            <div class="gr-6">
                <label for="date">Autres informations</label>
                <textarea id="autre" name="autre"></textarea>
            </div>
        </div>
        <div class="grid-ctn">
            <div class="gr-2 form-button"><input id="submit-form" type="submit" value="envoyer"></div>
            
        </div>
        <div class="gr-12"><span class="mention">*Les champs avec un astérisque sont obligatoires</span></div>
    </form>

    {% endif %}
</div>
