{% include('includes/head.twig') %}

<body class="{{ body_class }}" >

  {% include('includes/header.twig') %}

  <div class="wrap" role="document">
    <div class="top-rotate">
      <div></div>
    </div>

    {% if isHome %}
      <div class="banner-video">

        <iframe width="100%" height="100%" id="home-video" src="{{post.get_field('video')}}?version=3&loop=1&autoplay=1&rel=0&showinfo=0&controls=0&autohide=1&enablejsapi=1&playlist={% do action('getYTIDFromURL', post.get_field('video')) %}" frameborder="0"></iframe>
      </div>
    {% endif %}

    <div class="container">
        <div class="content">
          {% block content %}{% endblock %}
        </div><!-- /.content -->
      </div>
  </div><!-- /.wrap -->

  {% include('includes/footer.twig') %}

  {{ wp_footer }}

  <script type="text/javascript" src="/app/themes/sprig-master/dist/js/vendor.js"></script>
  <script type="text/javascript" src="/app/themes/sprig-master/dist/js/main.js"></script>

</body>
</html>
